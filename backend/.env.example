# Environment Configuration Template
# Copy this file to .env and customize for your environment

# Server Configuration
PORT=3001
HOST=localhost
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Database Configuration
DB_PATH=./data
DB_AUTOLOAD=true
DB_TIMESTAMP=true
DB_CORRUPT_THRESHOLD=0.1

# API Configuration
BODY_LIMIT=10mb
API_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_STANDARD_HEADERS=true
RATE_LIMIT_LEGACY_HEADERS=false

# Logging Configuration
# LOG_LEVEL: error, warn, info, debug (default: info)
LOG_LEVEL=info
# LOG_FORMAT: json, simple, combined (default: simple)
LOG_FORMAT=simple
# LOG_FILE_ENABLED: Enable file logging with automatic rotation (default: false)
# Set to true for production to enable persistent logs
LOG_FILE_ENABLED=false
# LOG_FILE_PATH: Directory for log files (default: ./logs)
LOG_FILE_PATH=./logs
# LOG_FILE_MAX_SIZE: Max size per log file before rotation (default: 10MB)
LOG_FILE_MAX_SIZE=10MB
# LOG_FILE_MAX_FILES: Number of log files to keep (default: 5)
# Total disk usage = MAX_SIZE * MAX_FILES (e.g., 10MB * 5 = 50MB max)
LOG_FILE_MAX_FILES=5

# Security Configuration
HELMET_ENABLED=true
HELMET_CSP=false
TRUST_PROXY=false

# Feature Flags
ENABLE_METRICS=false
ENABLE_HEALTH_CHECK=true
ENABLE_SWAGGER=true
ENABLE_DEBUG_ROUTES=true
